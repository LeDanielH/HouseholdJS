{
	"name": "householdjs-monorepo",
	"version": "1.3.1",
	"private": true,
	"devDependencies": {
		"@types/jest": "^25.2.1",
		"@types/node": "^13.13.5",
		"jest": "^26.0.1",
		"lerna": "^3.20.2",
		"prettier": "^2.0.5",
		"rimraf": "^3.0.2",
		"ts-jest": "^25.5.1",
		"ts-optchain": "^0.1.8",
		"typedoc": "^0.17.6",
		"typescript": "^3.8.3"
	},
	"scripts": {
		"install": "lerna exec npm install",
		"build": "lerna run build",
		"clean": "npm run clean:household && npm run clean:household",
		"clean:node_modules": "lerna clean && rimraf node_modules",
		"clean:household": "lerna run clean",
		"clean:docs": "lerna run clean:docs",
		"prettier": "prettier --write \"./**/*.{ts,tsx}\"",
		"test": "jest",
		"publish": "lerna publish",
		"docs": "lerna run docs",
		"upgrade": "ncu -u && lerna exec npm upgrade"
	}
