{
	"name": "householdjs-monorepo",
	"version": "1.2.0",
	"private": true,
	"devDependencies": {
		"@types/jest": "^24.0.18",
		"@types/node": "^12.7.11",
		"jest": "^24.9.0",
		"lerna": "^3.16.4",
		"npm-check-updates": "^3.2.0",
		"prettier": "^1.18.2",
		"rimraf": "^3.0.0",
		"ts-jest": "^24.1.0",
		"ts-optchain": "^0.1.8",
		"typedoc": "^0.15.0",
		"typescript": "^3.6.3"
	},
	"scripts": {
		"install": "lerna exec npm install",
		"build": "lerna run build",
		"clean": "npm run clean:household && npm run clean:household",
