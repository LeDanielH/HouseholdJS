{
	"defaultSeverity": "warning",
	"compilerOptions": {
		"baseUrl": "./packages",
		"paths": {
			"@householdjs/layout": ["layout/src"],
			"@householdjs/ui": ["ui/src"],
			"@householdjs/utils": ["utils/src"],
			"@householdjs": ["*"]
		},
		"target": "es5",
		"module": "commonjs",
		"declaration": true,
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"jsx": "react",
		"noLib": false,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"composite": true
	},
	"plugins": [
		{ "transform": "ts-optchain/transform" }
	],
	"exclude": ["node_modules", "tests", "lib", "__tests__"]
}
